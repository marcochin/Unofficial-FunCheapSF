<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/group_item_padding"
    android:clickable="true"
    android:background="@drawable/recyclerview_row">

    <ImageView
        android:id="@+id/event_thumbnail_image"
        android:layout_width="@dimen/thumbnail_width"
        android:layout_height="@dimen/thumbnail_height"
        android:paddingRight="11dp"
        android:layout_gravity="center_vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/event_location"
            android:text="Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_price"
            android:textSize="@dimen/event_item_text_size"/>

        <TextView
            android:id="@+id/event_price"
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/price_padding_right"
            android:textSize="@dimen/event_item_text_size"/>

        <TextView
            android:id="@+id/event_time"
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/event_item_text_size"/>

        <TextView
            android:id="@+id/event_title"
            android:text="Event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_location"
            android:textSize="@dimen/event_item_text_size"/>
        </RelativeLayout>
    </LinearLayout>
