<resources>

    <!-- Base application theme. -->
    <style name="ToolbarFont">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FlatButton">
        <item name="android:minWidth">@dimen/dialog_button_min_width</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/flat_button_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/flat_button_dark</item>
        <item name="android:paddingLeft">@dimen/dialog_button_left_right_padding</item>
        <item name="android:paddingRight">@dimen/dialog_button_left_right_padding</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
    </style>

    <!-- Error Buttons-->
    <style name="ErrorButton" parent="FlatButton">
        <item name="android:layout_marginTop">@dimen/error_button_top_margin</item>
    </style>

    <!-- Child Details and Map Buttons -->
    <style name="ChildButton" parent="FlatButton">
        <item name="android:layout_marginTop">@dimen/child_button_top_margin</item>
    </style>

    <!-- Time Menu Check Box Row -->
    <style name="ActionMenuRelativelayout">
        <item name="android:layout_width">@dimen/action_menu_row_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/action_menu_row_padding</item>
        <item name="android:background">@drawable/action_menu_row</item>
    </style>

    <style name="ActionMenuTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/action_menu_row_text_size</item>
    </style>

    <style name="TimeMenuImageView">
        <item name="android:layout_width">@dimen/action_menu_row_image_height_width</item>
        <item name="android:layout_height">@dimen/action_menu_row_image_height_width</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_checkmark</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="CalendarMenuImageView">
        <item name="android:layout_width">@dimen/action_menu_row_image_height_width</item>
        <item name="android:layout_height">@dimen/action_menu_row_image_height_width</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/ic_bulletpoint</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ProgressWheel">
        <item type="id" name="android:id">@id/progress_wheel</item>
        <item name="android:layout_width">@dimen/progress_wheel_size</item>
        <item name="android:layout_height">@dimen/progress_wheel_size</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">invisible</item>
        <item name="matProg_barColor">@color/color_accent</item>
        <item name="matProg_progressIndeterminate">true</item>
        <item name="matProg_fillRadius">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeBase">
    </style>

    <style name="AppThemeBase" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

</resources>